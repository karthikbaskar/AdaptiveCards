<!--            app:state="@{viewModel.state}">-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.INVISIBLE}">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="Loading Options"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Loading Options"
                        android:textColor="#6E6E6E"
                        android:textSize="17sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/error_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Search options"
                    android:gravity="center"
                    tools:background="@drawable/adaptive_card_no_search_result_error" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_results_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:descendantFocusability="afterDescendants"
                    android:scrollbars="vertical"
                    android:visibility="@{viewModel.isLoading ? View.INVISIBLE : View.VISIBLE}"
                    app:adapter="@{viewModel.adaptor}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </FrameLayout>
    </LinearLayout>
