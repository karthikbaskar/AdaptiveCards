<!--                app:stardust_iconColor="?attr/search_bar_icon_color"-->
<!--                app:stardust_iconSize="mini"-->
<!--                app:stardust_iconSymbol="search" />-->

            <EditText
                android:id="@+id/type_ahead_search_query"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="Start typing to search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#6E6E6E"
                android:textSize="16sp"
                tools:ignore="Autofill" />

<!--            <com.microsoft.stardust.IconView-->
