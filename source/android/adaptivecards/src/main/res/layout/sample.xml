<!--                app:stardust_iconBorderType="circular"-->
<!--                app:stardust_iconColor="@color/semanticcolor_primarySurface"-->
<!--                app:stardust_iconSize="mini"-->
<!--                app:stardust_iconSymbol="dismiss"-->
<!--                app:stardust_viewSize="micro"-->
<!--                tools:ignore="StardustExcludedAttributeValueUsage" />-->

        </LinearLayout>

<!--        <com.microsoft.stardust.DividerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="@dimen/padding_6"-->
